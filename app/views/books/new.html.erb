<h1>Books</h1>
<p>Title</p>
<p>Body</p>

<%= @books.each do |book| %>
<span>
    <%= link_to book.title, "/books/#{book.id}" %>
</span>
<% end %>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>