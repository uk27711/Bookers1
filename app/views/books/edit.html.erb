<h1>Editing Book</h1>
<%= form_with(model: @book, url: book_path(@book), local: true, authenticity_token: true, method: :patch) do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, class: "book_body" %> 
  </div>

  <div class="actions">
    <%= f.submit "Update Book", class: "btn btn-primary" %>
    <a class="edit" href="<%= edit_book_path(@book) %>">Edit</a>
      | 
    <a class="back" href="/books">Back</a>
  </div>
<% end %>
