<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
  <label for="book_body">Body</label>
  <%= f.text_area :body, class: "book_body" %> 
</div>

<div class="actions">
<%= f.submit "Update Book", class: "btn btn-primary" %>
</div>

<% end %>

<%= link_to 'Show', book_path(@book) %>

<a class="show" href="/books">Show</a>
