<h1>Editing Book</h1>
<%= form_with(model: @book, url: book_path(@book), local: true, authenticity_token: true, method: :patch) do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body, class: "book_body" %> 
  </div>

  <div class="actions">
    <%= f.submit "Update Book", class: "btn btn-primary" %>

    <a class="show" href="<%= show_book_path(@book) %>">Show</a>
      | 
    <a class="back" href="/books">Back</a>
  </div>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this @book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
<% end %>
